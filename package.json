{
  "name": "local-weather",
  "description": "A weather app using Next.js, Mantine UI and the OpenWeather and Google Maps API's.",
  "version": "1.0",
  "homepage": "https://localwx.vercel.app/",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gregrickaby/local-weather.git"
  },
  "author": "Greg Rickaby <gregrickaby@gmail.com>",
  "bugs": {
    "url": "https://github.com/gregrickaby/local-weather/issues"
  },
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "rimraf .next && next dev",
    "format": "npx prettier '**/*.{js,jsx,ts,tsx,md,mdx,html,css,scss,json,yml}' --config=.prettierrc.js --write || true",
    "lint": "npm run format && npm run lint:js && npm run lint:md && npm run type-check",
    "lint:js": "next lint",
    "lint:md": "npx markdownlint '**/*.{md,mdx}' --fix",
    "start": "next start",
    "type-check": "tsc"
  },
  "dependencies": {
    "@mantine/core": "^4.0.1",
    "@mantine/hooks": "^4.0.1",
    "@mantine/next": "^4.0.1",
    "@mantine/notifications": "^4.0.1",
    "@modulz/radix-icons": "^4.0.0",
    "dayjs": "^1.10.8",
    "next": "12.1.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "swr": "^1.2.2"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.7",
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.40",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "eslint": "^8.10.0",
    "eslint-config-next": "^12.1.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "markdownlint": "^0.25.1",
    "markdownlint-cli": "^0.31.1",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.2"
  }
}
