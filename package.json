    "@mantine/next": "^6.0.19",
    "@mantine/notifications": "^6.0.19",
    "next": "^13.4.13",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.10.1",
    "swr": "^2.2.1"
  },
  "devDependencies": {
    "@evilmartians/lefthook": "^1.4.8",
    "@types/node": "^20.5.0",
    "@types/react": "^18.2.20",
    "eslint": "^8.47.0",
    "eslint-config-next": "^13.4.13",
    "eslint-config-prettier": "^9.0.0",
    "markdownlint": "^0.30.0",
    "markdownlint-cli": "^0.35.0",
    "prettier": "^3.0.1",
    "rimraf": "^5.0.1",
    "typescript": "^5.1.6"
  }
}
