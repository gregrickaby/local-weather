{
  "name": "local-weather",
  "description": "A weather app using Next.js, Mantine UI and the OpenWeatherMap and Google Maps API's.",
  "version": "1.0",
  "homepage": "https://localwx.vercel.app/",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gregrickaby/local-weather.git"
  },
  "author": "Greg Rickaby <greg@gregrickaby.com>",
  "bugs": {
    "url": "https://github.com/gregrickaby/local-weather/issues"
  },
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "rimraf .next && next dev",
    "format": "npx prettier '**/*.{js,jsx,ts,tsx,md,mdx,html,css,scss,json,yml}' --config=.prettierrc.js --write || true",
    "lint": "npm run format && npm run lint:js && npm run lint:md && npm run type-check",
    "lint:js": "next lint",
    "lint:md": "npx markdownlint '**/*.{md,mdx}' --fix",
    "start": "next start",
    "type-check": "tsc"
  },
  "dependencies": {
    "@emotion/react": "^11.10.0",
    "@emotion/server": "^11.10.0",
    "@mantine/core": "^5.0.3",
    "@mantine/hooks": "^5.0.3",
    "@mantine/next": "^5.0.3",
    "@mantine/notifications": "^5.0.3",
    "@modulz/radix-icons": "^4.0.0",
    "next": "12.2.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "swr": "^1.3.0"
  },
  "devDependencies": {
    "@evilmartians/lefthook": "^1.0.5",
    "@types/node": "^18.6.4",
    "@types/react": "^18.0.17",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "eslint": "^8.21.0",
    "eslint-config-next": "^12.2.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "markdownlint": "^0.26.1",
    "markdownlint-cli": "^0.32.1",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.4"
  }
}
