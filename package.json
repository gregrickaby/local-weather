    "@mantine/next": "^5.7.2",
    "@mantine/notifications": "^5.7.2",
    "next": "^13.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.6.0",
    "swr": "^2.0.0-rc.0"
  },
  "devDependencies": {
    "@evilmartians/lefthook": "^1.2.0",
    "@types/node": "^18.11.9",
    "@types/react": "^18.0.25",
    "eslint": "^8.27.0",
    "eslint-config-next": "^13.0.3",
    "eslint-config-prettier": "^8.5.0",
    "markdownlint": "^0.26.2",
    "markdownlint-cli": "^0.32.2",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.8.4"
  }
}
