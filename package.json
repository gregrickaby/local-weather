  "devDependencies": {
    "@evilmartians/lefthook": "^1.9.0",
    "@types/node": "^22.10.1",
    "@types/react": "^19.0.1",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.0.4",
    "eslint-config-prettier": "^9.1.0",
    "markdownlint": "^0.37.0",
    "markdownlint-cli": "^0.43.0",
    "postcss": "^8.4.49",
    "postcss-preset-mantine": "1.17.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "stylelint": "^16.11.0",
    "stylelint-config-standard": "^36.0.1",
    "typescript": "^5.7.2"
  }
