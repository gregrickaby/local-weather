    "next": "^14.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "swr": "^2.2.4"
  },
  "devDependencies": {
    "@evilmartians/lefthook": "^1.6.0",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "markdownlint": "^0.33.0",
    "markdownlint-cli": "^0.38.0",
    "postcss": "^8.4.33",
    "postcss-preset-mantine": "1.12.3",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "stylelint": "^16.2.0",
    "stylelint-config-standard": "^36.0.0",
    "typescript": "^5.3.3"
  }
}
