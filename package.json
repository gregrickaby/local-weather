{
  "name": "local-weather",
  "description": "A weather app using Next.js, Mantine UI and both the National Weather Service and Google Maps API's.",
  "version": "1.0",
  "homepage": "https://localwx.vercel.app/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gregrickaby/local-weather.git"
  },
  "author": "Greg Rickaby <gregrickaby@gmail.com>",
  "bugs": {
    "url": "https://github.com/gregrickaby/local-weather/issues"
  },
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "rimraf .next && next dev",
    "format": "npx prettier '**/*.{js,jsx,ts,tsx,md,mdx,html,css,scss,json,yml}' --config=.prettierrc.js --write || true",
    "lint": "npm run format && npm run lint:js && npm run lint:md && npm run type-check",
    "lint:js": "npx eslint '**/*.{js,ts,jsx,tsx}' --fix || true && next lint",
    "lint:md": "npx markdownlint '**/*.{md,mdx}' --fix",
    "start": "next start",
    "type-check": "tsc"
  },
  "dependencies": {
    "@mantine/core": "^3.6.7",
    "@mantine/hooks": "^3.6.7",
    "@mantine/next": "^3.6.7",
    "@mantine/notifications": "^3.6.7",
    "@modulz/radix-icons": "^4.0.0",
    "dayjs": "^1.10.7",
    "next": "12.0.10",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "swr": "^1.2.1"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.7",
    "@types/node": "^17.0.17",
    "@types/react": "^17.0.39",
    "eslint": "^8.9.0",
    "eslint-config-next": "^12.0.10",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsdoc": "^37.9.1",
    "eslint-plugin-prettier": "^4.0.0",
    "markdownlint": "^0.25.1",
    "markdownlint-cli": "^0.31.1",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "sharp": "^0.30.1",
    "typescript": "^4.5.5"
  }
}
